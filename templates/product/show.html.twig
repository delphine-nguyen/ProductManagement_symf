{% extends 'base.html.twig' %}

{% block title %}Product
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset("css/product_show.css") }}"/>
{% endblock %}

{% block body %}
	<h1>{{ product.name }}</h1>

	<main>
		<article class="productCardBig">
			<img src="{{ product.urlImage }}" alt="Placeholder" class="productImg"/>
			<p class="productPrice">{{ product.price }}â‚¬</p>
			<p class="productDesc">{{ product.description }}</p>
		</article>

		<a href="{{ path('app_product_index') }}" class="routeButton">back to list</a>
		{% if is_granted("ROLE_ADMIN") %}
			<div class="productActions">
				<a href="{{ path('app_product_edit', {'id': product.id}) }}" class="routeButton">edit</a>
			</div>
			{{ include('product/_delete_form.html.twig') }}
		{% endif %}

	</main>
{% endblock %}
